+			if err != nil {
+				return err
+			}
+			if tr == nil {
+				t.Fatalf("expected runtime transport")
+			}
+			_, _ = cmd.OutOrStdout().Write([]byte("ok\n"))
+			return nil
+		},
+	}
+	markRequiresTransport(remoteCmd)
+	cmd.AddCommand(remoteCmd)
+
+	out := &bytes.Buffer{}
+	errOut := &bytes.Buffer{}
+	cmd.SetOut(out)
+	cmd.SetErr(errOut)
